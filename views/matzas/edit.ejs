<%- include('../partials/header') %>

  <div class="whiteBackgound">

    <h1>Edit Your Matza Recipe</h1>

    <form action="/matzas/<%= matza._id %>?_method=PUT" method="POST">
      <label>Title:</label>
      <input type="text" name="title" value="<%= matza.title %>">
      <br>
      <label>Image:</label>
      <input type="text" name="image" value="<%= matza.image %>">
      <br>
      <label>Ingredients:</label>
      <input type="text" name="ingredients" value="<%= matza.ingredients %>">
      <br>
      <label>Instructions:</label>
      <input type="text" name="instructions" value="<%= matza.instructions %>">
      <br>
      <input type="submit" value="Submit">
    </form>
  
  </div>

<%- include('../partials/footer') %>